#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["ParkeringsRegistrering/ParkeringsRegistrering.csproj", "ParkeringsRegistrering/"]

# restore NuGet packages
RUN dotnet restore "ParkeringsRegistrering/ParkeringsRegistrering.csproj"
COPY . .
WORKDIR "/src/ParkeringsRegistrering"
# Build in release mode
RUN dotnet build "ParkeringsRegistrering.csproj" -c Release -o /app/build

FROM build AS publish
# Publish the microservise to the /app/publish folder
RUN dotnet publish "ParkeringsRegistrering.csproj" -c Release -o /app/publish /p:UseAppHost=false

# The image the final container is based on
FROM base AS final 
WORKDIR /app
EXPOSE 80
# Copy files from /app/publish to final container
COPY --from=publish /app/publish .
#  Specify that when the final container runs it will start up dotnet ShoppingCart.dll
ENTRYPOINT ["dotnet", "ParkeringsRegistrering.dll"]